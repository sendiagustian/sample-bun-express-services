{
    "name": "template-service",
    "module": "index.ts",
    "type": "module",
    "routes": {
        "controllerPathGlobs": [
            "src/routes/**/*.ts" // Path to the controller files
        ]
    },
    "scripts": {
        "start": "bun run dist/index.js",
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "tsoa spec-and-routes && bun --env-file=.env.production --bun build src/index.ts --compile --minify --sourcemap --outfile dist/api-app --target bun",
        "swagger": "tsoa spec",
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix "
    },
    "peerDependencies": {
        "typescript": "^5.0.0" // TypeScript 
    },
    "dependencies": {
        "express": "^4.19.2", // Framework web server routing
        "morgan": "^1.10.0", // Logger middleware
        "mysql2": "^3.11.0", // MySQL client
        "swagger-ui-express": "^5.0.1", // Swagger UI
        "tsoa": "^6.4.0", // Swagger API
        "uuid": "^10.0.0", // UUID generator
        "winston": "^3.14.2", // print Logger
        "zod": "^3.23.8" // Schema validation
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1", // Linter
        "@types/bun": "latest", // Type definitions for bun
        "@types/express": "^4.17.21", // Type definitions for express
        "@types/morgan": "^1.9.9", // Type definitions for morgan
        "@types/swagger-ui-express": "^4.1.6", // Type definitions for swagger-ui-express
        "@types/uuid": "^10.0.0", // Type definitions for uuid
        "concurrently": "^8.2.2", // Run multiple commands concurrently
        "eslint": "^9.9.1", // Linter
        "globals": "^15.9.0", // Global variables
        "nodemon": "^3.1.4", // Monitor for any changes in your source and automatically restart your server
        "prettier": "^3.3.3", // Code formatter
        "typescript-eslint": "^8.4.0" // TypeScript linter
    }
}